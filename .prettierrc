{
    "semi": true,                    
    "trailingComma": "es5",          
    "singleQuote": true,              
    "printWidth": 80,               
    "tabWidth": 2,                  
    "useTabs": false,                 
    "arrowParens": "always",         
    "bracketSpacing": true,          
    "jsxBracketSameLine": false,     
    "endOfLine": "lf",               
    "proseWrap": "preserve",          
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "singleQuote": false      
        }
      },
      {
        "files": "*.blade.php",
        "options": {
          "singleQuote": false         
        }
      }
    ]
  }
  